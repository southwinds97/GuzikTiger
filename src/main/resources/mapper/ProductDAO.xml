	 <!--all상품 -->		 
	<select id="getAllSelect"
		resultType = "com.edu.springboot.product.ProductDTO"
		parameterType="com.edu.springboot.ParameterDTO">
		<!-- select * from (
			select tb.*, rownum rNum from(
